<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/bt_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/bt_class"
        app:tint="@color/text_color"
        app:srcCompat="@drawable/class_printer" />
    <TextView
        android:id="@+id/bt_name"
        tools:text="name device"
        android:textColor="@color/gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="64dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bt_mac"
        tools:text="mac adders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="64dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/bt_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="196dp"
        android:textSize="14sp"
        tools:text="DUAL" />

</RelativeLayout>
